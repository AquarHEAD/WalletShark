-# encoding: utf-8
.row
  .span8
    %img{:src => "/images/logofinal.png"}/
  .span4
    - form_tag '/user/login/', :method => "post" do
      %fieldset
        %legend 登录
        %input{:placeholder => "用户名", :type => "text", :name => "login_id"}/
        %span.help-block
          %a{:href => "/user/forget/"} 忘记密码了?
        %input{:placeholder => "密码", :type => "password", :name => "login_pass"}/
        %br/
        %button.btn{:type => "submit"} 登录
      %br/
      %fieldset
        %legend 还没有帐号?
        %a.btn.btn-primary{:href => "/user/signup"} 点此注册
