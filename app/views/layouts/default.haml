-# encoding: utf-8

!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title
      = @title
      | 易付通
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:href => "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.no-icons.min.css", :rel => "stylesheet"}/
    %link{:href => "//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css", :rel => "stylesheet"}/
    %link{:href => "/favicon.png?v=2", :rel => "shortcut icon", :type => "image/png"}/
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .tooltip {
        position: absolute;
        text-align: center;
        padding: 6px 8px;
        font: 12px sans-serif;
        background: #ffb515;
        border-radius: 6px;
        color: white;
      }
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"}
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/js/bootstrap.min.js"}
    %link{:href => "/stylesheets/home.css", :rel => "stylesheet"}/
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/d3/3.1.6/d3.min.js"}
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/datatables/1.9.4/jquery.dataTables.min.js"}
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "/"} 易付通
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .nav-collapse.collapse
            - if @user
              %ul.nav
                %li.active
                  %a{:href => "/user/"} 我的易付通
            %ul.nav.pull-right
              - if @user
                %li
                  %a.help-trigger{:href => "#"} 帮助
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    = @user.nickname
                    %b.caret
                  %ul.dropdown-menu
                    %li.nav-header 帐号管理
                    %li
                      %a{:href => "/user/edit"} 编辑个人资料
                    / %li
                    /   %a{:href => "/user/resetloginpass"} 修改登录密码
                    %li
                      %a{:href => "/user/genresetpaypass"} 修改支付密码
                    %li.divider
                    %li
                      %a{:href => "/user/logout/"} 注销
              - else
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    访客, 你好!
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{:href => "/user/login/"} 登录
                    %li.divider
                    %li
                      %a{:href => "/user/signup/"} 注册
    .container
      = yield
      %hr/
      %footer
        %p{:style => "text-align:right;"} _by_ AquarHEAD L.